  "shortcuts": [
    {
      "name": "Ver Dados",
      "short_name": "Dados",
      "description": "Visualizar dados dos sensores em tempo real",
      "url": "/dados",
      "icons": [
        {
          "src": "/shortcut-dados.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Configurações",
      "short_name": "Config",
      "description": "Configurar alertas e preferências",
      "url": "/configuracoes",
      "icons": [
        {
          "src": "/shortcut-config.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Relatórios",
      "short_name": "Relatórios",
      "description": "Visualizar relatórios e histórico",
      "url": "/relatorios",
      "icons": [
        {
          "src": "/shortcut-relatorios.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://umcad.com/app"
    }
  ],
  
  "prefer_related_applications": false,
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  
  "handle_links": "preferred",
  
  "capture_links": "existing-client-navigate",
  
  "protocol_handlers": [
    {
      "protocol": "web+umcad",
      "url": "/handle-protocol?url=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/import-data",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"]
      },
      "icons": [
        {
          "src": "/file-handler-icon.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  
  "share_target": {
    "action": "/share-data",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "data",
          "accept": ["text/csv", "application/json"]
        }
      ]
    }
  },
  
  "permissions": [
    "notifications",
    "background-sync",
    "persistent-storage"
  ],
  
  "features": [
    "cross-origin-isolated"
  ],
  
  "display_override": [
    "window-controls-overlay",
    "minimal-ui",
    "standalone",
    "browser"
  ],
  
  "id": "umcad-monitoring-system",
  
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7"
}
